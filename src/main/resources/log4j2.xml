<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="WARN" monitorInterval="30" strict="true"
	includeLocation="true">
	<Properties>
		<Property name="rolling">/Users/lilloraffa/Development/data/log/Injestion/log-inj.log</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="#### %d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c(%L) %M() %n%m%n" />
		</Console>
		<RollingFile name="RollingFile" fileName="${rolling}"
			filePattern="${rolling}-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout
				pattern="#### %d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c(%L) %M() %n%m%n" />
			<Policies>
			    <TimeBasedTriggeringPolicy interval="24" modulate="true" />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="100" />
		</RollingFile>
		<Async name="ASYNC">
			<AppenderRef ref="RollingFile" />
		</Async>
	</Appenders>
	<Loggers>
		<Logger name="org.hibernate" level="warn" additivity="false">
			<AppenderRef ref="RollingFile" />
		</Logger>

		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>